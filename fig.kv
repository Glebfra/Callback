

<TooltipMDIconButton@MDIconButton+MDTooltip>
<TooltipMDCheckbox@MDCheckbox+MDTooltip>
<TooltipMDSlider@MDSlider+MDTooltip>

#:set default_font_name 'TimesNewRomanRegular.ttf'

#:import images_path kivymd.images_path

<Container>:
    orientation:'horizontal'
    size_hint:(1,1)
    spacing:10
    padding:[10]
    MDBoxLayout:
        size_hint:(.7,1)
        MDCard:
            style: 'elevated'
            radius: 0
            MDBoxLayout:
                id: box_graph
                size_hint_x:1
                size_hint_y:1

    MDBoxLayout:
        spacing:5
        size_hint:(.3,1)
        orientation:'vertical'
        MDCard:
            style: 'elevated'
            radius: 0
            size_hint_x:1
            size_hint_y:.2
            MDGridLayout:
                rows:2
                cols:3
                MDIconButton:
                    text: '0'
                    icon:'brush-variant'
                    theme_icon_color: "Custom"
                    icon_color: [.27, 0, .33, 1]
                    icon_size : sp(48)
                    on_press: app.bth_change_color(self)
                MDIconButton:
                    text: '1'
                    icon:'brush-variant'
                    theme_icon_color: "Custom"
                    icon_color: [.13, .56, .55, 1]
                    icon_size : sp(48)
                    on_press: app.bth_change_color(self)
                MDIconButton:
                    text: '2'
                    icon:'brush-variant'
                    theme_icon_color: "Custom"
                    icon_color: [.99, .91, .14, 1]
                    icon_size : sp(48)
                    on_press: app.bth_change_color(self)
        MDCard:
            style: 'elevated'
            radius: 0
            size_hint_x:1
            size_hint_y:.7
            MDBoxLayout:
                size_hint:(1,1)
                orientation:'vertical'
                radius: 0
                style: 'elevated'
                line_color:[.1,.1,.1,.1]
                size_hint_y:.4
                size_hint_x:1
                MDBoxLayout:
                    orientation:'horizontal'
                    spacing:10
                    MDTextField:
                        hint_text: "Rows:"
                    MDTextField:
                        hint_text: "Columns:"
                MDTextField:
                    hint_text: "Refactory Time:"
                MDTextField:
                    hint_text: "Excited Time:"
                MDTextField:
                    hint_text: "Activator remain:"
                MDTextField:
                    hint_text: "Excitation Threshold:"
                MDTextField:
                    size_hint_y:1/5
                    hint_text: "Time Between Steps:"
        MDCard:
            radius: 0
            style: 'elevated'
            line_color:[.1,.1,.1,.1]
            size_hint_min_y:50
            size_hint_y:.1
            size_hint_x:1
            MDBoxLayout:
                orientation: 'horizontal'
                MDIconButton:
                    size_hint_x:.5
                    id: status
                    icon: 'play'
                    size_hint_y:1
                    theme_icon_color: "Custom"
                    icon_color: [.2, .8, .2, 1]
                    icon_size : sp(50)
                    on_release: app.btn_press(self)
                MDIconButton:
                    size_hint_x:.5
                    size_hint_y:1
                    icon:'step-forward'
                    theme_icon_color: "Custom"
                    icon_color: [.2, .8, .2, 1]
                    icon_size : sp(50)
