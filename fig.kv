

<TooltipMDIconButton@MDIconButton+MDTooltip>
<TooltipMDCheckbox@MDCheckbox+MDTooltip>
<TooltipMDSlider@MDSlider+MDTooltip>

#:import toast kivymd.toast.toast
#:set default_font_name 'TimesNewRomanRegular.ttf'

#:import images_path kivymd.images_path
<BrushPicker@MDIconButton>:
    icon_size : sp(48)
    on_press: app.bth_change_color(self)



<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            filters:['*\\*.json']
            path:'Backend/config'
            id: filechooser
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()
            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)

<SaveDialog>:
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            on_selection: text_input.text = self.selection and self.selection[0] or ''

        TextInput:
            id: text_input
            size_hint_y: None
            height: 30
            multiline: False

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Save"
                on_release: root.save(filechooser.path, text_input.text)


<MDInput@MDTextField>:
    input_type: 'number'
    mode: "rectangle"
    helper_text_mode: "on_error"
    on_text_validate: app.textfield_change(self)
    on_focus: app.textfield_change(self)
    required: True
    helper_text: "incorrect input"
    line_color_error: 1, 0, 0, 1

<Container>:
    orientation:'horizontal'
    size_hint:(1,1)
    spacing:10
    padding:[10]

    MDBoxLayout:
        orientation:'vertical'
        size_hint:(.85,1)
        size_hint_min_x: root.height
        size_hint: None, 1
        width: root.height
        Drawer:
            size_hint:(1,.85)
            id: Drawer

    MDBoxLayout:
        size_hint_min_x:175
        spacing:5
        size_hint:(.15,1)
        orientation:'vertical'
        MDCard:
            spacing:5
            padding: "4dp"
            orientation:'vertical'
            radius: 0
            style: 'elevated'
            line_color:[.1,.1,.1,.1]
            size_hint_y:.4
            MDTextField:
                hint_text:'Path:'
                mode: "rectangle"
                icon_right:'file-hidden'
                id:FilePath
                on_text:app.loadState(self)
            MDBoxLayout:
                orientation:'horizontal'

                MDIconButton:
                    icon:'folder-plus'
                    on_release: root.show_load()
        MDCard:
            size_hint:(1,.6)
            style: 'elevated'
            radius: 0

    MDBoxLayout:
        size_hint_min_x:175
        spacing:5
        size_hint:(.15,1)
        orientation:'vertical'
        MDCard:
            size_hint_min_y:175
            orientation: "vertical"
            padding: "8dp"
            style: 'elevated'
            radius: 0
            size_hint_x:1
            size_hint_y:.15
            MDLabel:
                text: "Brush Properties"
                theme_text_color: "Secondary"
                size_hint_y: None
                height: self.texture_size[1]
            MDSeparator:
                height: "1dp"
            MDBoxLayout:
                orientation:'vertical'
                MDBoxLayout:
                    orientation:'horizontal'
                    adaptive_height:True
                    spacing:10
                    padding:[5]
                    MDInput:
                        hint_text:'Cell phase'
                        id:cell_phase
                        input_filter: 'int'
                        icon_right: "brush"
                    MDInput:
                        theme_icon_color:'custom'
                        id:brush_size
                        hint_text:'Brush size'
                        input_filter: 'int'
                        icon_right: "resize"
                MDBoxLayout:
                    orientation:'horizontal'
                    adaptive_height:True
                    spacing:10
                    padding:[5]
                    MDIconButton:
                        theme_icon_color:'Custom'
                        icon:'delete'
                        on_release: app.clearCanvas()




        MDCard:
            padding: "4dp"
            orientation:'vertical'
            style: 'elevated'
            radius: 0
            size_hint_x:1
            size_hint_y:.5
            MDLabel:
                text: "Simulation Properties"
                theme_text_color: "Secondary"
                size_hint_y: None
                height: self.texture_size[1]
            MDSeparator:
                height: "1dp"
            MDScrollView:
                do_scroll_x:False
                padding:[20]
                size_hint:(1,.9)
                MDBoxLayout:
                    adaptive_height:True
                    spacing:10
                    padding:[5,5,5,5]
                    orientation:'vertical'
                    radius: 0
                    style: 'elevated'
                    line_color:[.1,.1,.1,.1]
                    MDInput:
                        input_filter: 'int'
                        id: size
                        hint_text: "Size:"
                    MDInput:
                        input_filter: 'int'
                        id: refractory_time
                        hint_text: "Refactory Time:"
                        helper_text: "Test"
                    MDInput:
                        input_filter: 'int'
                        id: excitation_time
                        hint_text: "Excitation Time:"
                    MDInput:
                        input_filter: 'float'
                        id: activator_remain
                        hint_text: "Activator remain:"
                    MDInput:
                        input_filter: 'float'
                        id: critical_value
                        hint_text: "Critical Value:"
                    MDInput:
                        input_filter: 'float'
                        id: time_between_steps
                        hint_text: "Time Between Steps(ms):"
        MDCard:
            radius: 0
            style: 'elevated'
            line_color:[.1,.1,.1,.1]
            size_hint_min_y:50
            size_hint_y:.07
            size_hint_x:1
            MDBoxLayout:
                orientation: 'horizontal'
                MDIconButton:
                    size_hint_x:.5
                    id: status
                    icon: 'play'
                    size_hint_y:1
                    theme_icon_color: "Custom"
                    icon_color: [.2, .8, .2, 1]
                    icon_size : sp(50)
                    on_release: app.play_button_press(self)
                MDIconButton:
                    size_hint_x:.5
                    size_hint_y:1
                    icon:'step-forward'
                    theme_icon_color: "Custom"
                    icon_color: [.2, .8, .2, 1]
                    icon_size : sp(50)
                    on_release:app.next_step_button_press()
